<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sadna.app.findmyfriends.activities.GettingAllGroupActivity"
    android:background="@color/holo_blue_light">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ListOfContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/finisnbutton" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button"
        android:id="@+id/finisnbutton"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:capitalize="sentences"
        android:clickable="true"
        android:text="Finish"
        android:layout_gravity="right"
        android:layout_row="25"
        android:layout_column="0"
        android:textColor="@color/holo_orange_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="attemptGroupCreation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>


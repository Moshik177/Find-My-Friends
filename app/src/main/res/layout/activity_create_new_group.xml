<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createNewGroup"
    android:background="@android:color/holo_blue_light"
    android:weightSum="1">

    <EditText
        android:id="@+id/newGroupNameTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newGroupNameField"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/holo_orange_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:inputType="text" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:id="@+id/doneGroupButton"
        android:layout_alignRight="@+id/newGroupNameTextBox"
        android:layout_alignEnd="@+id/newGroupNameTextBox"
        android:layout_alignParentBottom="true"
        android:text="done"
        android:layout_gravity="right"
        android:layout_row="25"
        android:layout_column="0"
        android:onClick="attemptGroupCreation"/>

</GridLayout>

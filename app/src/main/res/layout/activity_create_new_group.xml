<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createNewGroup"
    android:background="@drawable/background1"
    android:weightSum="1">

    <EditText
        android:id="@+id/newGroupNameTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newGroupNameField"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/holo_orange_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:inputType="text"
        android:textColorHint="@color/holo_orange_light" />

    <Button
        android:id="@+id/doneGroupButton"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:capitalize="sentences"
        android:clickable="true"
        android:layout_alignRight="@+id/newGroupNameTextBox"
        android:layout_alignEnd="@+id/newGroupNameTextBox"
        android:layout_alignParentBottom="true"
        android:text="NEXT"
        android:layout_gravity="right"
        android:layout_row="25"
        android:layout_column="0"
        android:textColor="@color/holo_orange_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="attemptGroupCreation"/>
</GridLayout>
